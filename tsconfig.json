{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["esnext", "dom", "dom.iterable"],
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "downlevelIteration": true,
        "noEmit": true,
        "strict": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types", "libdefs/globals"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "paths": {
            "shared/*": ["./shared/*"]
        }
    },
    "include": ["./libdefs", "./packages"],
    "exclude": ["./libdefs/*.js", "**/dist/**", "**/npm/**", "**/node_modules/**", "./packages/lexical-devtools/**"],
    "typedocOptions": { "logLevel": "Verbose" },
    "ts-node": { "require": ["tsconfig-paths/register"], "transpileOnly": true }
}
